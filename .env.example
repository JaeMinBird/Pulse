# CI/CD Pipeline Dashboard - Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

##########################
# Database Configuration
##########################

# PostgreSQL username (default: postgres)
DB_USERNAME=postgres

# PostgreSQL password
# REPLACE WITH YOUR ACTUAL PASSWORD
DB_PASSWORD=your_postgres_password_here

# PostgreSQL host (default: localhost)
DB_HOST=localhost

# PostgreSQL port (default: 5432)
DB_PORT=5432

# Database name
DB_NAME=cicd_dashboard

##########################
# GitHub API Configuration
##########################

# GitHub Personal Access Token
# REQUIRED: Generate at https://github.com/settings/tokens
# Scopes needed:
#   - public_repo (for public repositories)
#   - repo (for private repositories)
#   - read:org (for organization repositories)
# REPLACE WITH YOUR ACTUAL TOKEN
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# GitHub API base URL (default: https://api.github.com)
GITHUB_API_BASE_URL=https://api.github.com

# GitHub API timeout in milliseconds (default: 10000)
GITHUB_API_TIMEOUT=10000

##########################
# CORS Configuration
##########################

# Allowed origins for CORS (comma-separated for multiple origins)
# Development default: http://localhost:4200
# Production example: https://dashboard.your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:4200

##########################
# Scheduler Configuration
##########################

# Enable/disable scheduled GitHub sync (true/false)
SCHEDULER_ENABLED=true

# Sync rate in milliseconds (default: 300000 = 5 minutes)
# 60000 = 1 minute
# 300000 = 5 minutes
# 600000 = 10 minutes
# 1800000 = 30 minutes
SCHEDULER_GITHUB_SYNC_RATE=300000

##########################
# Server Configuration
##########################

# Server port (default: 8080)
SERVER_PORT=8080

# Spring profile (default, dev, prod, docker)
SPRING_PROFILES_ACTIVE=docker

##########################
# Docker-Specific Settings
##########################
# (Only needed when running with Docker Compose)

# Docker PostgreSQL service name
# DOCKER_DB_HOST=db

# Docker network name
# DOCKER_NETWORK=cicd-dashboard-network

##########################
# Optional: Logging
##########################

# Logging level (TRACE, DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PERATON_CICD=DEBUG

##########################
# Security (Optional)
##########################

# JWT Secret (if implementing authentication in future)
# JWT_SECRET=your_jwt_secret_key_here

# Session timeout in seconds
# SESSION_TIMEOUT=3600
